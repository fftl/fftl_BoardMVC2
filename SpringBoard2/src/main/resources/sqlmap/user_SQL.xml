<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<insert id="create" parameterType="User" useGeneratedKeys="true" keyProperty="user_id">
		<![CDATA[
			insert into user
			(username, password, nickname)
			values
			(#{username}, #{password}, #{nickname});
		]]>
	</insert>
	
	<select id="read" parameterType="User" resultType="User">
		<![CDATA[
			select *
			from user
			where user_id = #{userId};
		]]>
	</select>
</mapper>