<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	
	<insert id="create" parameterType="com.fftl.springboard2.user.User" useGeneratedKeys="true" keyProperty="userId">
		<![CDATA[
			insert into user
			(username, password, nickname)
			values
			(#{username}, #{password}, #{nickname});
		]]>
	</insert>
	
	<select id="read" parameterType="com.fftl.springboard2.user.User" resultType="com.fftl.springboard2.user.User">
		<![CDATA[
			select *
			from user
			where user_id = #{userId};
		]]>
	</select>
	
	<select id="login" parameterType="com.fftl.springboard2.user.User" resultType="com.fftl.springboard2.user.User">
		<![CDATA[
			select *
			from user
			where username=#{username} and password=#{password};
		]]>
	</select>
	
	<update id="update" parameterType="com.fftl.springboard2.user.User">
		<![CDATA[
			update user
			set username = #{username}, password = #{password}, nickname = #{nickname}
			where user_id = #{userId};
		]]>
	</update>
	
	<delete id="delete" parameterType="com.fftl.springboard2.user.User">
		<![CDATA[
			delete user
			where user_id = #{userId};
		]]>
	</delete>
	
	
	
	
</mapper>